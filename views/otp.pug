doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        title Capybara
    body
        script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
        link(rel="stylesheet" type="text/css" href="/public/css/style.css")
        main#app
            if .error
                div#error_box
                    p #{.error}
            section#login
                h2 Log In
                form(action="/otp" method="post")
                    img(id="qr_code" width="256" height="256")
                    input(type="text" name="code_confirm" placeholder="Confirmation Code")
                    button(type="submit") Confirm

        script.
            var qr_code = #{.qr_code}
            document.getElementById("qr_code").setAttribute("src", qr_code)
